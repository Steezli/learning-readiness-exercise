    <script>
        const ul = document.getElementById('friends');
        
        fetch('friends.json')
            .then(response => response.json())
            .then(friends => {
                friends.forEach(friend => {
                    const li = document.createElement('li');
                    li.textContent = `${friend.first} ${friend.last}`;
                    ul.appendChild(li);
                });
            });
    </script>
